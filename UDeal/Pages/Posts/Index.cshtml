                    @Html.DisplayNameFor(model => model.Post[0].Type)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].Course)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].Campus)
                </th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Post.Where(p => p.Type == PostType.Selling)) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                   @* <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>*@
                   @* <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>*@
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Condition)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.MinPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxPrice)
                    </td>*@
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Campus.Name)
                    </td>
                    <td>
                        <a role = "button" class = "btn btn-outline-info mb-2" asp-page="./Edit" asp-route-id="@item.Id">Edit</a>
                        <a role = "button" class = "btn btn-outline-dark mb-2" asp-page="./Details" asp-route-id="@item.Id">Details</a>
                        <a role= "button" class = "btn btn-outline-danger mb-2" asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
        }
        </tbody>
    </table>
</div>

