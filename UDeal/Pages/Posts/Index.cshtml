<h1>My Posts</h1>

<h3>Selling</h3>
<p>
    <a role = "button" class = "btn btn-outline-primary" asp-page="Create" asp-route-type="0">Create New</a>
</p>

<div style="overflow-x: auto">
    <table class="table table-responsive">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].Title)
                </th>
               @* <th>
                    @Html.DisplayNameFor(model => model.Post[0].Description)
                </th>*@
                @*<th>
                    @Html.DisplayNameFor(model => model.Post[0].Quantity)
                </th>*@
                @*<th>
                    @Html.DisplayNameFor(model => model.Post[0].Condition)
                </th>*@
                <th>
                    @Html.DisplayNameFor(model => model.Post[0].Price)
